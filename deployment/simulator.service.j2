[Unit]
Description=Exerge simulator solution
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
EnvironmentFile={{ simulator_env.dest }}
Restart=on-failure
RestartSec=1
User=ubuntu
WorkingDirectory={{ repo_dest }}/simulator
ExecStart=/usr/bin/node app.js

[Install]
WantedBy=multi-user.target
