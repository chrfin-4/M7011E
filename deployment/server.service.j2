[Unit]
Description=Exerge server software
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
EnvironmentFile={{ server_env.dest }}
Restart=on-failure
RestartSec=1
User=ubuntu
WorkingDirectory={{ repo_dest }}/server
ExecStart=/usr/bin/node src/app.js

[Install]
WantedBy=multi-user.target
